<style>
  form { display: inline; }

  form input {
    background: none!important;
    border: none;
    padding: 0!important;
    font: inherit;
    color: -webkit-link;
    text-decoration: underline;
    cursor: auto;
  }
</style>

<h3><%= @question.title %></h3>
<p><%= @question.body %></p>
<a href="/questions/<%= @question.id %>/edit">Edit Question</a>
<%= erb :'questions/_delete', layout: false, locals: { question: @question } %>
<ul>
<% @question.comments.each do |comment| %>
  <li><%= comment.body %></li>
<% end %>
</ul>
<p>Add a comment</p>
<form action='/questions/<%= @question.id %>/comments' method='post'>
<label for='body'>Comment here: </label>
  <input type="text" name="body"><br>
  <input type="submit" value="Comment">
</form>
<a href='/'>Return Home</a>
